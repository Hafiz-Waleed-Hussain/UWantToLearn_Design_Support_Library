<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.designsupportlibrary" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.TextInputLayoutActivity"
            android:label="@string/title_activity_text_input_layout"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.designsupportlibrary.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.FloatingActionButtonActivity"
            android:label="@string/title_activity_floating_action_button"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.designsupportlibrary.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.MaterialDesignTabActivity"
            android:label="@string/title_activity_material_design_tab"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.designsupportlibrary.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.NavigationViewActivity"
            android:label="@string/title_activity_navigation_view"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.designsupportlibrary.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.CoordinateLayoutWithFloatingActionButtonActivity"
            android:label="@string/title_activity_coordinate_layout"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.designsupportlibrary.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.CoordinatorLayoutWithAppBar"
            android:label="@string/title_activity_coordinator_layout_with_app_bar"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.designsupportlibrary.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.CollapsingToolbarLayoutActivity"
            android:label="@string/title_activity_collapsing_toolbar_layout"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.designsupportlibrary.ui.activities.MainActivity" />
        </activity>
    </application>

</manifest>
