<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="0"
        android:pivotY="0"
        android:duration="700"
        />

    <rotate
        android:startOffset="500"
        android:fromDegrees="0"
        android:toDegrees="-360"
        android:pivotX="100"
        android:pivotY="100"
        android:duration="700"
        />

</set>